{
    "manifest_version": 3,
    "name": "텍스트 매크로",
    "description": "단축키와 컨텍스트 메뉴를 이용한 지정 문구 붙여넣게",
    "version": "1.0.0",
    "sidebar_action": {
        "default_page": "index.html",
        "default_icon": {
            "16": "images/icon.png"
        },
        "default_title": "sidebar-app",
        "use_navigation_bar": false
    },
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}