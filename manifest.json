{
  "manifest_version": 3,
  "name": "텍스트 매크로",
  "description": "단축키와 오른쪽 클릭 메뉴를 이용해서 지정 문구 붙여넣을 수 있습니다.",
  "version": "1.1.0",
  "sidebar_action": {
    "default_page": "index.html",
    "default_icon": {
      "16": "images/icon.png"
    },
    "default_title": "sidebar-app",
    "use_navigation_bar": false
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting", "contextMenus"],
  "icons": {
    "16": "images/icon.png"
  },
  "host_permissions": ["*://*/*"],
  "commands": {
    "macro0": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "Command+Shift+6"
      },
      "description": "macro1",
      "global": true
    },
    "macro1": {
      "suggested_key": {
        "default": "Alt+Shift+2",
        "mac": "Command+Shift+7"
      },
      "description": "macro2",
      "global": true
    },
    "macro2": {
      "suggested_key": {
        "default": "Alt+Shift+3",
        "mac": "Command+Shift+8"
      },
      "description": "macro3",
      "global": true
    },
    "macro3": {
      "suggested_key": {
        "default": "Alt+Shift+4",
        "mac": "Command+Shift+9"
      },
      "description": "macro4",
      "global": true
    }
  }
}
